# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf
*.pyw text eol=lf
*.pyx text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# PowerShell scripts
*.ps1 text eol=crlf

# Windows batch files
*.bat text eol=crlf
*.cmd text eol=crlf

# JSON files
*.json text eol=lf

# Markdown files
*.md text eol=lf

# Config files
*.cfg text eol=lf
*.ini text eol=lf
*.toml text eol=lf
*.yaml text eol=lf
*.yml text eol=lf

# Git config files
.gitignore text eol=lf
.gitattributes text eol=lf

# Documentation
*.txt text eol=lf
LICENSE text eol=lf
